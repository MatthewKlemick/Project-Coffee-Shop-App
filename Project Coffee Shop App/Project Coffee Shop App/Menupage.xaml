<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Coffee_Shop_App.Menupage"
             BackgroundColor="#000000">

    <ContentPage Title="Menu">
        <StackLayout>
            <Frame BackgroundColor="#0000000" VerticalOptions="CenterAndExpand">
                <Image Source="logo.png" VerticalOptions="Center" HorizontalOptions="Center" />
            </Frame>
            <Frame BackgroundColor="#3C1518">
                <Button x:Name="EspB" Text="Espresso"  TextColor="#FF0000" BackgroundColor="Transparent" FontSize="20" Clicked="EspB_Clicked"/>
            </Frame>
            <Frame BackgroundColor="#3C1518">
                <Button x:Name="HotB" Text="Hot Drinks" TextColor="#FF0000" BackgroundColor="Transparent" FontSize="20" Clicked="HotB_Clicked"/>
            </Frame>
            <Frame BackgroundColor="#3C1518">
                <Button x:Name="ColdB" Text="Cold Drinks" TextColor="#FF0000" BackgroundColor="Transparent" FontSize="20" Clicked="ColdB_Clicked"/>
            </Frame>
            <Frame BackgroundColor="#3C1518">
                <Button x:Name="QuiB" Text="Quick Bites" TextColor="#FF0000" BackgroundColor="Transparent" FontSize="20" Clicked="QuiB_Clicked"/>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="About" >
        <StackLayout>
            <Frame BackgroundColor="#000000"  HorizontalOptions="FillAndExpand">
                <Image Source="wideshot.jpg" HorizontalOptions="FillAndExpand"/>
            </Frame>
            <Frame BackgroundColor="#000000">
                <Label Text="Jules Cafe" FontSize = "20" FontAttributes="Bold" TextColor="#FF0000"/>
            </Frame>
            <Label Text="4A Kent Street &#10; Newmarket &#10; Auckland &#10; 1023 &#10; &#10; +64 9 444 5555 &#10; &#10; info@julescafe.co.nz" TextColor="#FF0000" FontSize="10" />
            <Frame BackgroundColor="#000000" >
                <Grid RowSpacing="1" ColumnSpacing="1" BackgroundColor="#000000">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="facebook_logo.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Grid.Column="0"/>
                    <Image Source="instagram_logo.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Grid.Column="1"/>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Map" >
        <WebView Source="https://mobile.here.com/p/h-?msg=4a%20Kent%20St"/>
    </ContentPage>
</TabbedPage>